
<%= form_for(@article) do |f| %> <!-- form_for does a lot... and i got the correct comments in -->
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>

  <p>
    <%=f.label :title %><br />
    <%=f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body%>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>